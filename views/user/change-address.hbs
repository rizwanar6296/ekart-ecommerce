<script src="https://code.jquery.com/jquery-3.6.1.js" integrity="sha256-3zlB5s2uwoUzrXK3BT7AX3FyvojsraNFxCc2vC/7pNI="
    crossorigin="anonymous"></script>

<main class="main container">
    <div class="d-flex justify-content-center">
<div class="col-md-12 p-0 " >
            <div class="accordion m-0" id="accordionExample">
                <div>
                    <h2 id="headingOne">
                        <button class="col-12 btn-light" data-bs-toggle="collapse" data-bs-target="#collapseOne"
                            aria-expanded="false" aria-controls="collapseOne"
                            style="box-shadow: 1px 3px 11px -3px; border: solid #00000005 1px;">
                            Select Address<span class="float-right"><i class="fa fa-angle-down"
                                    aria-hidden="true"></i></span>
                        </button>
                    </h2>
                    <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne"
                        data-bs-parent="#accordionExample">
                        <div >
                            <form action="/selected-address" method="post" >
                                <div class="row mb-5">
                                {{#each addressList}}
                                <div class="col-md-3 ml-3" style="border:solid grey 1px;box-shadow: 1px 3px 11px 0px;"> 
                                    
                                    <input type="radio" name="addressId" id={{this._id}} value={{this._id}} checked>    
                                    <p style="display:inline-block;">{{this.firstName}} {{this.lastName}}</p>
                                    <p>Email:{{this.email}}</p>
                                    <p>{{this.houseName}},{{this.streetAdress}}</p>
                                    <p>{{this.city}}, state:{{this.state}}, Pincode:{{this.pincode}}</p>
                                    <p>Mobile:{{this.phoneNumber}}</p>
                                    {{!-- <input id="firstName" name="firstName" value={{this.firstName}}, hidden>
                                    <input id="lastName" name="lastName" value={{this.lastName}}, hidden>
                                    <input id="email" name='email' value={{this.email}}, hidden>
                                    <input id="houseName" name="houseName" value={{this.houseName}}, hidden>
                                    <input id="streetAdress" name="streetAdress" value={{this.streetAdress}}, hidden>
                                    <input id="city" name="city" value={{this.city}}, hidden>
                                    <input id="state" name="state" value={{this.state}}, hidden>
                                    <input id="pincode" name="pincode" value={{this.pincode}}, hidden>
                                    <input id="phoneNumber" name="phoneNumber" value={{this.phoneNumber}}, hidden> --}}
                                </div>
                            {{/each}}
                            </div>
                                <button type="submit" class="btn btn-success btn-round float-right">Select Address</button>
                        
                            
                             </form>
                        </div>
                    </div>
                </div>
                <div>
                    <h2 id="headingThree">
                        <button class="col-12" data-bs-toggle="collapse" data-bs-target="#collapseThree"
                            aria-expanded="false" aria-controls="collapseThree"
                            style="box-shadow: 1px 3px 11px -3px; border: solid #00000005 1px;">
                            Add New address<span class="float-right"><i class="fa fa-angle-down"
                                    aria-hidden="true"></i></span>
                        </button>
                    </h2>
                    <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree"
                        data-bs-parent="#accordionExample">

                        <div class="card " style="    box-shadow: 1px 3px 11px -3px; border: solid #00000005 1px;">
                            <div class="card-header py-3">
                                <h5 class="mb-0">Biling details</h5>
                            </div>
                            <div class="card-body">
                                <form action="/add-address" method="post" >
                                    <!-- 2 column grid layout with text inputs for the first and last names -->
                                    <div class="row ">
                                        <div class="col">
                                            <div class="form-outline">
                                                <label class="form-label" for="form7Example1">First name</label>
                                                <input type="text" id="firstName" name="firstName"
                                                    onkeyup="valFirstName()" class="form-control" />
                                                <span id="errFirstName" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="form-outline">
                                                <label class="form-label" for="form7Example2">Last name</label>
                                                <input type="text" id="lastName" name="lastName" onkeyup="valLastName()"
                                                    class="form-control" />
                                                <span id="errLastName" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Email input -->
                                    <div class="form-outline ">
                                        <label class="form-label" for="form7Example5">Email</label>
                                        <input type="email" id="email" name='email' onkeyup="validEmail()"
                                            class="form-control" />
                                        <span id="errEmail" class="text-danger"></span>
                                    </div>

                                    <!-- Number input -->


                                    <!-- Text input -->
                                    <label>Street address *</label>
                                    <input type="text" class="form-control" id="houseName" name="houseName"
                                        placeholder="House number and Street name" required>
                                    <input type="text" class="form-control" id="streetAdress" name="streetAdress"
                                        placeholder="Appartments, suite, unit etc ..." required>

                                    <div class="row">
                                        <div class="col-sm-6">
                                            <label>City *</label>
                                            <input type="text" class="form-control" id="city" name="city" required>
                                            <span id="errCity" class="text-danger"></span>
                                        </div><!-- End .col-sm-6 -->

                                        <div class="col-sm-6">
                                            <label>State *</label>
                                            <input type="text" class="form-control" id="state" name="state" required>
                                            <span id="errState" class="text-danger"></span>
                                        </div><!-- End .col-sm-6 -->
                                    </div><!-- End .row -->

                                    <div class="row">
                                        <div class="col-sm-6">
                                            <label>Pincode *</label>
                                            <input type="text" class="form-control" id="pincode" name="pincode" required>
                                            <span id="errPincode" class="text-danger"></span>
                                        </div><!-- End .col-sm-6 -->

                                        <div class="col-sm-6">
                                            <label class="form-label" for="form7Example6">Phone</label>
                                            <input id="phoneNumber" name="phoneNumber" onkeyup="validPhoNeumber()"
                                                class="form-control" />
                                            <span id="errPhoneNumber" class="text-danger"></span>
                                        </div>
                                    </div><!-- End .row -->
                                    {{!-- <input type="text" name="userId" value="{{userId}}" hidden> --}}
                                    <button type="submit" class="btn btn-success btn-round float-right"
                                        onclick="return validation()">Add Address</button>
                                </form>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>

    </div>
</main>
