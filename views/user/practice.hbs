    const crop_btn0 = document.getElementById('crop-btn0')
    const crop_btn1 = document.getElementById('crop-btn1')
    const crop_btn2 = document.getElementById('crop-btn2')
    const crop_btn3 = document.getElementById('crop-btn3')
