<script>
  function removeWishlist(productId){
    alert('haiiiii')
    if(confirm('are you sure')){
      $.ajax({
      url:'/remove-wishlist/?productId='+productId,     
      method:'get',
      success:(response)=>{
        if(response.status) {  
          document.getElementById('row'+productId).style.display='none'
        }
       
      }
    })
    }
  }

</script>