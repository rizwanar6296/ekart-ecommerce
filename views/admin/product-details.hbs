
<div class="container">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-xs-5">
                       <h2 class="text-center"><b>Product Management</b></h2>
                    </div>
                </div>
            </div>
            <a class=" btn btn-success" href="/admin/add-product">Add Product</a>
            <input id="myInput" type="text" class="float-right form-control" style="width: 325px !important;" placeholder="Search..">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Sl No</th>
                        <th>Product Name</th>						
                        <th>Price</th>
                        <th>Description</th>
                        <th >Discount</th>
                        <th>Stock</th>
                        <th>IMAGE</th>
                        <th style="width: 80px;">Visibility</th>
                        <th style="width: 80px;">Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody id="myTable">
                  {{#each productDetails}}
                    <tr class="text-center">
                        <td>{{indexing @index}}</td>
                        <td>{{this.productName}}</td>
                        <td>{{this.price}}</td>                        
                        
                        <td>{{this.description}}</td>
                        <td>{{this.discount}}</td>
                        <td>{{this.stock}}</td>
                        <td><img src='/images/ekart/products/{{this.image.[0]}}' height="60px" width="80px" alt=""></td>
                        <td> {{#if this.visibility}}
                          <a class="btn btn-danger text-white" href="/admin/block-visibility/{{this._id}}">block</a>
                          {{else}}
                          <a class="btn btn-success text-white" href="/admin/unblock-visibility/{{this._id}}">unblock</a>
                          {{/if}}</td>
                        <td>
                          <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary text-white ">Edit</a>
                          {{!-- {{#if this.status}}
                          <a class="btn btn-danger text-white" href="/admin/block-user/{{this._id}}">block</a>
                          {{else}}
                          <a class="btn btn-success text-white" href="/admin/unblock-user/{{this._id}}">unblock</a>
                          {{/if}} --}}
                        </td>
                        <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-danger text-white float-right "   onclick=  "return deleteProduct(event)">Delete</a></td>
                    </tr>
                  {{/each}}
                </tbody>
            </table>
            <div class="clearfix">
                <div class="hint-text">Showing <b>5</b> out of <b>25</b> entries</div>
                <ul class="pagination">
                    <li class="page-item disabled"><a href="#">Previous</a></li>
                    <li class="page-item"><a href="#" class="page-link">1</a></li>
                    <li class="page-item"><a href="#" class="page-link">2</a></li>
                    <li class="page-item active"><a href="#" class="page-link">3</a></li>
                    <li class="page-item"><a href="#" class="page-link">4</a></li>
                    <li class="page-item"><a href="#" class="page-link">5</a></li>
                    <li class="page-item"><a href="#" class="page-link">Next</a></li>
                </ul>
            </div>
        </div>
    </div>        
</div>     

</body>
<script>
  $(document).ready(function(){
    $("#myInput").on("keyup", function() {
      var value = $(this).val().toLowerCase();
      $("#myTable tr").filter(function() {
        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
      });
    });
  });
  $(".create_index").text(parseInt($(".create_index").text())+1)
</script>
<script>
  function deleteProduct(event){  
    event.preventDefault()
    if(sweetAlertas().then()){
      alert(sweetAlertas())
      return true
    }
    return false
  }
  async function sweetAlertas(){
  
  const swalWithBootstrapButtons = Swal.mixin({
  customClass: {
    confirmButton: 'btn btn-success',
    cancelButton: 'btn btn-danger'
  },
  buttonsStyling: false
})

swalWithBootstrapButtons.fire({
  title: 'Are you sure?',
  text: "You won't be able to revert this!",
  icon: 'warning',
  showCancelButton: true,
  confirmButtonText: 'Yes, delete it!',
  cancelButtonText: 'No, cancel!',
  reverseButtons: true
}).then((result) => {
  if (result.isConfirmed) {
    return true
    
  } else if (
    /* Read more about handling dismissals below */
    result.dismiss === Swal.DismissReason.cancel
  ) {

    swalWithBootstrapButtons.fire(
      'Cancelled',
      'Your imaginary file is safe :)',
      'error'
    )
    return false
  }
})

  
  }
</script>