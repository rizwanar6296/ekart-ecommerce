

  


<link rel="stylesheet" href="/css/admin-css/table.css">

<div class="container">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-xs-5">
                      <h2 class="text-center"><b>User Management</b></h2>
                    </div>
                </div>
            </div>
            <input id="myInput" type="text" class="float-right form-control" style="width: 325px !important;" placeholder="Search..">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Sl No</th>
                        <th>Name</th>						
                        <th>Email</th>
                        <th>Phone Number</th>
                        <th>Gender</th>
                        <th>Block/Unblock</th>
                    </tr>
                </thead>
                <tbody id="myTable">
                  {{#each userDetails}}
                    <tr>
                        <td>{{indexing @index}}</td>
                        <td>{{this.name}}</td>
                        <td>{{this.email}}</td>                        
                        <td>{{this.number}}</td>
                        <td>{{this.gender}}</td>
                        <td>
                          {{#if this.status}}
                          <a class="btn btn-danger text-white" href="/admin/block-user/{{this._id}}">block</a>
                          {{else}}
                          <a class="btn btn-success text-white" href="/admin/unblock-user/{{this._id}}">unblock</a>
                          {{/if}}
                        </td>
                        
                    </tr>
                  {{/each}}
                </tbody>
            </table>
            <div class="clearfix">
                <div class="hint-text">Showing <b>5</b> out of <b>25</b> entries</div>
                <ul class="pagination">
                    <li class="page-item disabled"><a href="#">Previous</a></li>
                    <li class="page-item"><a href="#" class="page-link">1</a></li>
                    <li class="page-item"><a href="#" class="page-link">2</a></li>
                    <li class="page-item active"><a href="#" class="page-link">3</a></li>
                    <li class="page-item"><a href="#" class="page-link">4</a></li>
                    <li class="page-item"><a href="#" class="page-link">5</a></li>
                    <li class="page-item"><a href="#" class="page-link">Next</a></li>
                </ul>
            </div>
        </div>
    </div>        
</div>     

</body>
<script>

  $(document).ready(function(){
    $("#myInput").on("keyup", function() {
      var value = $(this).val().toLowerCase();
      $("#myTable tr").filter(function() {
        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
      });
    });
  });

</script>